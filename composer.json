{
    "require": {
        "php": ">=8.2",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "illuminate/database": "^11.0",
        "monolog/monolog": "^3.8",
        "slim/psr7": "^1.4",
        "slim/slim": "^4.10",
        "twig/twig": "^3.0"
    },
    "autoload":{
        "psr-4": {
            "App\\Controllers\\": "src/Controllers/",
            "App\\Models\\": "src/Models/",
            "App\\Database\\": "src/Database/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
